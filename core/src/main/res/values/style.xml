<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="userDataInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/TextInputShapeOverlay</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="userAutoInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearance">@style/TextInputShapeOverlay</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="appBottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/grey_700</item>
        <item name="itemIconSize">18dp</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceTitleMedium</item>
    </style>

    <style name="commentInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="endIconTint">@color/amber_500</item>
    </style>

    <style name="customFABStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/CustomFABShapeOverlay</item>
    </style>

    <style name="TextInputShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/input_text_box_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/input_text_box_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/input_text_box_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/input_text_box_corner_radius</item>
    </style>

    <style name="StationInfoBottomSheetButtonShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/info_station_bottom_sheet_button_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/info_station_bottom_sheet_button_corner_radius</item>
        <item name="cornerSizeBottomRight">@dimen/info_station_bottom_sheet_button_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/info_station_bottom_sheet_button_corner_radius</item>
    </style>

    <style name="stationInfoBottomSheetButtonsStyle" parent="Widget.Material3.Button.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bottom_sheet_station_info_button_size</item>
        <item name="backgroundTint">@color/grey_700</item>
        <item name="strokeColor">@color/amber_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearance">@style/TextInputShapeOverlay</item>
        <item name="iconTint">@color/grey_300</item>
        <item name="iconSize">@dimen/bottom_sheet_station_info_button_image_size</item>
        <item name="iconPadding">@dimen/bottom_sheet_station_info_button_padding</item>
    </style>

    <style name="CustomFABShapeOverlay" parent="Widget.Material3.Button.Icon">
        <item name="cornerSize">100%</item>
    </style>
</resources>